
  <div class="bg-contact container">



    <div class="container col-lg-11">
      <%= image_tag "logo-white.png", class: "logo"%>
      <h1 class="contact">Contact</h1>
      <div class="row justify-content-md-center">
        <div class="col-lg-8">
          <div class="form-group">
              <%= form_for @contact, url: one_for_all_index_path do |f| %>
              <%= f.label :name %><br>
              <%= f.text_field :name, required: true, class:"form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :email  %><br>
              <%= f.email_field :email, required: true, class: "form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :message %><br>
              <%= f.text_area :message, as: :text, class:"form-control" %>

              <div class="hidden">
                <%= f.label :nickname %><br>
                <%= f.text_field :nickname, hint: "leave this field blank" %>
              </div>
          </div>
          <%= f.submit "Send message", class: "btn btn-secondary" %>
          <% end %>
        </div>
      </div>




    <div class="container col-lg-6">
      <div class="row">
        <div class="col-lg-6"><%= image_tag "linked_in_transparent.png"%></div>
        <div class="col-lg-6"><%= image_tag "github-icon_transparent.png"%></div>
      </div>
    </div>


  </div>
